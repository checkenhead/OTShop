<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ot.team1.dao.ICartDao">

	<resultMap id="cartMap" type="java.util.HashMap"></resultMap>
	
	<select id="getCartList" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getCartList(
			#{userid},
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=cartMap})
		}
	</select>
	
	<insert id="insertCart" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call insertCart(
			#{userid}, #{pdseq}, #{qty})
		}
	</insert>
	
	<delete id="deleteCart" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call deleteCart(#{cseq})
		}
	</delete>
	
	<insert id="insertOrders" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call insertOrders(
			#{userid}, #{oseq, mode=OUT, jdbcType=INTEGER})
		}
	</insert>
	
	<select id="getCart" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getCart(
			#{cseq},
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=cartMap})
		}
	</select>
	
	<insert id="insertOrderDetail" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call insertOrderDetail(
			#{oseq}, #{pdseq}, #{qty})
		}
	</insert>
	
</mapper>