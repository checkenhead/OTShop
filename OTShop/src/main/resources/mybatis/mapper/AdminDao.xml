<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ot.team1.dao.IAdminDao">

	<resultMap id="adminMap" type="java.util.HashMap"></resultMap>
	
	<select id="getAdmin" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getAdmin(
			#{adminid},
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=adminMap})
		}
	</select>
	
	<select id="getProductCatList" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getProductCatList(
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=adminMap})
		}
	</select>
	
	<insert id="insertProduct" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call insertProduct(
			#{pcseq}, #{brand}, #{name}, #{description}, #{gender}, #{image},
			#{pseq, mode=OUT, jdbcType=INTEGER})
		}
	</insert>
	
	<insert id="insertProductDetail" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call insertProductDetail(
			#{pseq}, #{optname}, #{price1}, #{price2}, #{price3}, #{stock})
		}
	</insert>
	
	<select id="getProductList" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getProductList(
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=adminMap})
		}
	</select>
	
	<select id="getProductDetailList" statementType="CALLABLE" parameterType="java.util.HashMap">
		{
			call getProductDetailList(
			#{PSEQ},
			#{ref_cursor, mode=OUT, jdbcType=CURSOR, javaType=ResultSet, resultMap=adminMap})
		}
	</select>
</mapper>